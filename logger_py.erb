def log_write(database_name,db_size,machine_name,file_n,time_taken):
    db_size = os.path.getsize(file_n) 
    t1 = time.localtime()
    desc="%s : %s successfully backed up." % (machine_name,database_name)
    t= time.strftime("%Y-%m-%d %H:%M:%S", time.localtime())
